---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="bg-slate-600">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			@import url('https://fonts.googleapis.com/css2?family=DM+Sans&family=Instrument+Serif&family=Silkscreen&display=swap');
		</style>
		<script src="https://kit.fontawesome.com/bceb2f1b08.js" crossorigin="anonymous"></script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 124, 58, 237;
		--accent-gradient: linear-gradient(45deg, rgb(var(--accent)), #da62c4 30%, white 60%);
	}
	html {
		font-family: 'Silkscreen', cursive;
		background-color: #F6F6F6;
	}

	h1,h2,h3,h4,h5,h6 {
		font-family: 'Instrument Serif', serif;
	}

	p {
		font-family: 'DM Sans', sans-serif;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
</style>
